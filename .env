# --------------------------------------------
# REQUIRED: Google Cloud Platform Settings
# --------------------------------------------

# Your Google Cloud Project ID
GCP_PROJECT_ID='................................................................' #INSERT YOUR GCP PROJECT ID
# Download from: https://console.cloud.google.com/iam-admin/serviceaccounts
GOOGLE_APPLICATION_CREDENTIALS='......................................................' #INSERT PATH TO YOU SERVICE ACCOUNT JSON FILE

# GCP regions and zones
GCP_REGION=europe-west1
GCP_ZONE=europe-west1-b

# --------------------------------------------
# REQUIRED: BigQuery Configuration
# --------------------------------------------
BQ_LOCATION='EU'
BQ_DATASET_EO=eo
BQ_DATASET_ANALYTICS=analytics
BQ_DATASET_ALERTS=alerts
BQ_DATASET_ML=ml
BQ_DATASET_DOCS=docs
BQ_DATASET_REPORTS=reports
BQ_DATASET_REFERENCE=reference
BQ_DATASET_LOGS=logs
BIGQUERY_SANDBOX_MODE=false
BQ_FORCE_RECREATE=true

# --------------------------------------------
# REQUIRED: Earth Engine Configuration
# --------------------------------------------
EE_SERVICE_ACCOUNT='..............................................................' #INSERT YOUR SERVICE ACCOUNT EMAIL based on how it is portrayed in your service account JSON file
EE_PRIVATE_KEY_FILE='......................................................' #INSERT PATH TO YOU SERVICE ACCOUNT JSON FILE, same as GOOGLE_APPLICATION_CREDENTIALS

# --------------------------------------------
# REQUIRED: Vertex AI Configuration
# --------------------------------------------
VERTEX_AI_LOCATION='europe-west4'
VERTEX_AI_ENDPOINT=europe-west4-aiplatform.googleapis.com
GEMINI_MODEL=gemini-2.0-flash-lite-001
EMBEDDING_MODEL=text-embedding-004

# Optional configurations
NDVI_TREND_STABLE_EPS=0.005
HIGH_EROSION_T_HA_YR=20
SOIL_LOSS_UNITS=tons_per_ha

# --------------------------------------------
# OPTIONAL: Cloud Storage
# --------------------------------------------
GCS_BUCKET_EXPORTS=terrawatch-asm-exports
GCS_BUCKET_TEMP=terrawatch-asm-temp

# --------------------------------------------
# OPTIONAL: External API Keys
# --------------------------------------------

# OpenWeather API for weather data (optional)
# Get key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=

# News API for news monitoring (optional)
# Get key from: https://newsapi.org
NEWS_API_KEY=

# --------------------------------------------
# Monitoring and Alerting Settings
# --------------------------------------------
MONITORING_INTERVAL_HOURS=24
ALERT_EMAIL=your-email@example.com
ALERT_THRESHOLD=0.5

# --------------------------------------------
# Development Settings
# --------------------------------------------
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# --------------------------------------------
# Taita Taveta Specific Settings
# --------------------------------------------
COUNTY_NAME=Taita Taveta
COUNTY_CODE=TT
TIMEZONE=Africa/Nairobi
COUNTY_WEST_BOUND=37.36
COUNTY_EAST_BOUND=39.56
COUNTY_NORTH_BOUND=-2.48
COUNTY_SOUTH_BOUND=-4.67